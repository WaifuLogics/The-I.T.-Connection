{% extends 'templates/base.twig' %}

{% block body %}

<style>
  #formWrap {
    border: 2px solid black;
    border-radius: 5px;
    height: 335px;
  }

  .userslider {
    width: 80%;
    overflow-x: scroll;
  }

  #roomAvatarWrapper {
    background-color: rgb(177, 177, 177);
    text-align: center;
    height: 300px;
  }

  #chatroomAvatar {
    display: block;
    margin-bottom: 4px;
  }

  .chatSettingCol {
    height: 320px;
  }

  #chatSettingSubmit {
    margin-top: 4px;
    text-align: center;
  }
</style>

<div>
  <!--Main Page Row-->
  <div class="row">

    <!--Main chatroom-->
    <div class="col l10 s12">
      <div class="row">

        <h3>Settings for [CHATROOM NAME]</h3>
        <form action="index.html" method="post">

          <div id="formWrap">

            <div class="col s6 chatSettingCol">
              <h5>Add Friends</h5>
              <div class="userSlider">
                <!--Insert all befriended users here-->
                <a><img class="user-img" src="/img/users/test.png" alt="user image"/></a>
              </div>
              <h5>Remove Users</h5>
              <div class="userSlider">
                <!--Insert all Currently added users here-->
                <a><img class="user-img" src="/img/users/test.png" alt="user image"/></a>
              </div>
              <h5>Change Room Name</h5>
              <textarea name="roomName" placeholder="[CURRENT ROOM NAME]" rows="8" cols="80">[CURRENT ROOM NAME]</textarea>
            </div>

            <div class="col s6 chatSettingCol">
              <div id="roomAvatarWrapper">
                <h5>Avatar</h5>
                <img class="user-img-big" id="chatroomAvatar" src="/img/users/test.png" alt="user image">
                <button class="waves-effect waves-light btn" type="button" name="button">Change Group Avatar</button>
              </div>
            </div>

          </div>

          <div id="chatSettingSubmit">
            <button type="submit" name="" class="waves-effect waves-light btn" value="">Apply and Save</button>
          </div>

        </form>
      </div>
    </div>
    {% include('templates/friendlist.twig') %}
  </div>

</div>
{% endblock %}

{% block scripts %}
  <script>
      SetActive('header-chat');
  </script>
{% endblock %}
