<div style="display:none">
    {% block menu %}
        {% if loggedIn %}
            <li class="header-home"><a href="{{ path_for('home') }}">Home</a></li>
            <li class="header-account"><a href="{{ path_for('account') }}">Account</a></li>
            <li class="header-friends"><a class="modal-trigger" onclick="CheckFriendRequests();" href="#modal-friends">Friends</a></li>
            <li class="header-chat"><a href="{{ path_for('chat') }}">Chat</a></li>
            <li class="header-search"><a href="{{ path_for('search') }}">Search</a></li>
            <li><a href="{{ path_for('logout') }}">Logout</a></li>
        {% else %}
            <li class="header-login"><a href="{{ path_for('register') }}">Log in</a></li>
        {% endif %}
    {% endblock %}
</div>
<header>
    <nav class="blue z-depth-0">
        <div class="nav-wrapper container">
            <a class="brand-logo truncate" href="{{ path_for('home') }}">The I.T. Connection</a>
            <a href="#" data-target="mobile-menu" class="sidenav-trigger"><i class="material-icons">menu</i></a>
            <ul id="nav-items" class="right  hide-on-med-and-down">
                {{ block('menu') }}
            </ul>
        </div>
    </nav>
    <ul class="sidenav" id="mobile-menu">
        {{ block('menu') }}
    </ul>
</header>
